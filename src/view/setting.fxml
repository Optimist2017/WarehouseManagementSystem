<VBox prefHeight="564.0" prefWidth="746.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.settingController">
   <children>
      <HBox prefHeight="483.0" prefWidth="746.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefHeight="511.0" prefWidth="418.0" spacing="10.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username :" />
                  <TextField fx:id="username" />
                  <Text layoutX="10.0" layoutY="23.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Full Name :" />
                  <TextField fx:id="fullname" layoutX="10.0" layoutY="27.0" />
                  <Text layoutX="10.0" layoutY="65.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Phone Number :" />
                  <TextField fx:id="phonenumber" layoutX="10.0" layoutY="69.0" />
                  <Text layoutX="10.0" layoutY="107.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email :" />
                  <TextField fx:id="email" layoutX="10.0" layoutY="109.0" />
                  <Text layoutX="20.0" layoutY="217.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password :" />
                  <TextField fx:id="password" layoutX="20.0" layoutY="233.0" />
                  <Text layoutX="10.0" layoutY="148.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Salary :" />
                  <TextField fx:id="salary" editable="false" layoutX="10.0" layoutY="153.0" />
                  <Text layoutX="10.0" layoutY="191.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date of Join" />
                  <TextField fx:id="dateregistered" editable="false" layoutX="10.0" layoutY="195.0" />
                  <Text layoutX="10.0" layoutY="233.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Added By :" />
                  <TextField fx:id="registeredby" editable="false" layoutX="10.0" layoutY="237.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <VBox prefHeight="522.0" prefWidth="440.0" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fx:id="picture" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  <Text fill="#3393f2" onMouseClicked="#selectimage" strokeType="OUTSIDE" strokeWidth="0.0" text="Attach Image" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Status :" />
                  <ChoiceBox fx:id="status" prefWidth="150.0" />
                  <Text layoutX="20.0" layoutY="200.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Adress :" />
                  <TextArea fx:id="address" prefHeight="128.0" prefWidth="200.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#update" text="Update Record" />
         </children>
      </VBox>
   </children>
</VBox>
